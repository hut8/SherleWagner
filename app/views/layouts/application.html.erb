<!DOCTYPE html>
<html>
<head>
  <title>Sherlewagner</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=PT+Sans' rel='stylesheet' type='text/css'>
</head>
<body class="<%=controller_name%> <%=action_name%>">

  <%= render "/layouts/navbar" %>
<div class="page">
  <div class="side_nav">

    <div class="side-nav-contain col-sm-2" id="pg-nav">

      <%= render "/layouts/sidebar" %>
        

    </div>
   <!--  <div class="side_bumper"></div> -->
  </div>                      

  
       <% if controller_name == "styles" && action_name == "index" || controller_name == "genres" && action_name == "show" %>
        <%= yield %>

       <% else %>
  <div class="contain col-sm-8">
        <div id="content_wrapper">
            <%= yield %>
            
        </div>
<%= render 'recently_viewed_products/recently_viewed_products' %>
        
  </div>  
  
        <% end %>
        <div class="col-sm-2 sidenav">
      <div class="well">
        <p>ADS</p>
      </div>
      <div class="well">
        <p>ADS</p>
      </div>
    </div>
         
       
       
      <%= render 'layouts/footer' %>
  
</div>
  

</body>
</html>
