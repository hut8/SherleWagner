
  <div class='tearsheet-form-box'>
    <%= form_tag  do %>
      <%= hidden_field_tag('product_id', @product.id) %>
      <%= hidden_field_tag('product_base_number', @product.number) %>
      <%= collection_select(:product, :material_id, @product.materials, :id, :name, include_blank: '') %>
      <%= collection_select(:tearsheet, :finish_id, @product.finishes, :id, :name, include_blank: '') %>
      <%= collection_select(:tearsheet, :china_color_id, @product.china_colors, :id, :name, include_blank: '') %>
      <%= submit_tag "Generate Tear Sheet", class: 'tear-sheet-submit' %>
    <% end %>
  </div>
