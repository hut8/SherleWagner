<div class="options">
  <div class="finishes">
    <% if @product.finishes.length >= 1 %>
    <h3>Finishes</h3>
    <% end %>
    <ul id="product_finishes_list" class="detail_list">
      <% @product.finishes.each do |finish| %>
        <li class="prod_tile finish_tile", data-finish_identifier="<%= finish.identifier %>"><%= finish.name %></li>
        <!-- finish.image -->
      <% end %>
    </ul>
  </div>
  <div class="materials">
    <% if @product.materials.length >= 1 %>
      <% if @product.finishes.length >= 1 %>
      <h3>Detail</h3>
      <% else %>
      <h3>Materials</h3>
      <% end %>
    <% end %>
    <ul id="product_materials_list" class="detail_list">
      <% @product.materials.each do |material| %>
        <li class="prod_tile finish_tile", data-material_identifier="<%= material.identifier %>"><%= material.name %></li>
        <!-- material.image -->
      <% end %>
    </ul>
  </div>
  <div class="china_colors">
  <% if @product.china_colors.length() > 0 %>
    <h3>China Color</h3>
    <ul id="product_china_list" class="detail_list">
      <% @product.china_colors.each do |china_color| %>
        <li class="prod_tile finish_tile  "><%= china_color.name %></li>
        <!-- china_color.image -->
      <% end %>
  <% end %>

  </ul>
  </div>
</div>

