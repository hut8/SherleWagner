<div class="prod_wrapper">

  <h1>Product page</h1>
  
  <div class="product_image">
    <%= image_tag @product.image.url %>
  </div>

  <%= render 'favorites/favorite_button' %>

  <div class="product_details">
    <h3>
    <%= @product.name%>
    </h3>
    <p>
    <%= @product.number %>
    </p>
  </div>

  <div class="image_list">
    Existing images:
    <ul>
      <% @product.product_configurations.each do |config| %>
        <li><%= config.number %></li>
      <% end %>
    </ul>
  </div>
  <div class="compilations">
    <% if @product.compilations.size > 0 %>
      <p>
      Compilations:
      </p>
      <ul>
        <% @product.compilations.each do |compilation| %>
          <li><%= link_to compilation.name, compilation_path(compilation) %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <%= render 'product_info' %>
  <%= render 'tearsheets_form' %>
</div>
