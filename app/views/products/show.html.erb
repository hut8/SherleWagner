
<div class="prod_page_content">


  <div class="product_details">
   
    
    <div class="images">   
      <div class="product_image" style="background-image:url(<%= @product.image.url%>)" ></div>  
      <!-- image_tag @product.image.url(:medium), class: 'product-image' %> -->
      <div class="image_list">
      Existing images:
        <ul id="alt_imgs">
          <% @product.product_configurations_except_first.each do |config| %>
            <li class="alt_img">
                <%= image_tag config.image.url(:thumb) %> <br/>
                <%= config.number %>
            </li>
          <% end %>
        </ul>
      </div> 
    </div>
    
    <div class="product_info">
      <h3>
        <%= @product.name%>
      </h3>
      <h4 class="prod-config-description">
        shown: <%= @product.product_configurations.last.description %>
      </h4>
      <h5 class="prod-config-number">
        product number: <%= @product.product_configurations.last.number %>
      </h4>
      <%= render 'favorites/favorite_button' %>
      <div class="associated">
        Associated collection: <%= link_to @product.associated_collection_or_null.name, style_path(@product.associated_collection_or_null.id) %>
      </div>
      
      <div class="options">
        <% if @product.finishes.length >= 1 %>
          <div id="finish_choice" class="option_box">
          
          </div>
        <% end %>

        <% if @product.materials.length >= 1 %>
          <div id="material_choice" class="option_box">

          </div>
        <% end %>
        
          
        
        
      </div>
       <%= render 'tearsheet_form' %>
    </div>
  </div>
   

  

  <div class="product_info2">
    
    <div class="compilations">
      <% if @product.compilations.size > 0 %>
        <p>
        Compilations:
        </p>
        <ul>
          <% @product.compilations.each do |compilation| %>
            <li><%= link_to(compilation.name, compilation_path(compilation))  %>

              <%= image_tag compilation.image.url(:thumb) %> 
            </li>
          <% end %>
        </ul>

      <% end %>
    </div>
    <%= render 'product_info' %>
   
  </div>
<br/>

</div>

