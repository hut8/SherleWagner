<%= render "/layouts/ajax1" %>
<%= render "/layouts/sideb" %>


<%=link_to "Upload product file", products_upload_page_path %>

<div class="searcher">
<%= form_tag search_path, :method => :get do %>
    <div class="l6">
        <div class="rcol">
            <div class="s10">
                <%= text_field_tag :search, params[:search] %>
            </div>
            <div class="s2">
                <%= submit_tag "Search", :name => nil, :class => "button" %>
            </div>
        </div>
    </div>
<% end %>
</div>


<div class="prod_wrapper">
<ul class="prod_list">
  <% @product_groups.each do |product_group| %>
    <li class ="prod_tile" id="<%= product_group.id %>"><%=link_to product_group.name, product_group_path(product_group.id) %></li>
  
  <% end %>
</ul>

</div>
<%= render "/layouts/sideb2" %>