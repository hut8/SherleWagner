<div class="list_wrapper">

        <ul >
          <% @product_type.product_sub_types.each do |product_sub_type| %>
            
            
             <%= link_to fetch_items_path(:cat_id => product_sub_type.id ), :remote => true do %>
                   <li class="prod_tile" id="sub_type_tile">
                    <h3 > 
                      <%= product_sub_type.name %>
                    </h3>
                  </li>              
                  <% end %>

                
              
                <% product_sub_type.four_products.each do |product| %>
                  <% bgimage= product.image.url(:medium) %>

    <li class ="prod_tile" style="background-image: url(<%= bgimage %>); background-size: contain; background-repeat: no-repeat;">
      <div class="prod_title">
        <%= link_to product.name, product_path(product), class:"prod_title_link" %>
      </div>
    </li>

                <% end %>
                <li class="prod_tile"><%= link_to '+', product_sub_type_path(product_sub_type) %></li> <div class="plus_end"></div>
              
            
            </li>




          <% end %>
        </ul>
      </div>