  <script>
  $('.side_nav').css('display','none');
  $('body').css('background-color','white');
  jQuery(document).ready(function () {
        var $container = $('#styles1');
        $container.imagesLoaded(function () {
            $container.masonry({
                itemSelector:'.box',
                isAnimated:true,
                animationOptions:{
                    duration:750,
                    easing:'linear',
                    queue:false
                }
            });
        });
    })
  </script>